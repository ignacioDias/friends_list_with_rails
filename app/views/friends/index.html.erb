<%if user_signed_in? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class = "thead-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody id="friends">
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to "Show", friend, class: "btn btn-primary" %> </td>
        <td><%= link_to "Edit", edit_friend_path(friend), class: "btn btn-secondary" %></td>
        <td><%= link_to "Delete", friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
<%else %>
  <div class="d-flex flex-column justify-content-center align-items-center" style="height: 10vh;">
    <h1>Debes loguearte para poder acceder a tus amigos</h1>
    <div class="mt-3">
      <%= link_to 'Login', new_user_session_path, class: "btn btn-dark mx-2" %>
      <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-secondary mx-2" %>
    </div>
  </div>

<%end %>

