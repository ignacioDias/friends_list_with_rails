<table class="table table-striped table-bordered table-hover">
  <thead class = "thead-dark">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Twitter</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody id="friends">
  <% @friends.each do |friend| %>
    <tr>
      <td><%= friend.first_name %></td>
      <td><%= friend.last_name %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <td><%= link_to "Show", friend, class: "btn btn-primary" %> </td>
      <td><%= link_to "Edit", edit_friend_path(friend), class: "btn btn-secondary" %></td>
      <td><%= button_to "Delete", friend, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger" %></td>

    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>

